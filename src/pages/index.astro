          </div>

          <div class="section-subtitle" style="margin-top:-4px;">
            Abaixo, o detalhamento financeiro por atendimento:
          </div>

          <div class="table-wrapper">
            <table>
              <thead>
              <tr>
                <th>Data</th>
                <th>Paciente</th>
                <th>Procedimento</th>
                <th>Produtos (R$)</th>
                <th>Procedimento (R$)</th>
                <th>Resultado</th>
              </tr>
              </thead>
              <tbody id="tbodyFinanceiro"></tbody>
            </table>
          </div>
          <div class="empty" id="financeiroEmpty">
            Ainda n√£o h√° lan√ßamentos financeiros. Registre um atendimento com itens de estoque.
          </div>
        </div>
      </section>
    </main>
  </div>

  <script>
    // --- ESTADO EM MEM√ìRIA ---
    let pacientes = [];
    let estoque = [];
    let atendimentos = [];

    let pacienteSelecionadoId = null;
    let filtroAtendPacienteId = null;

    let nextPacienteId = 1;
    let nextEstoqueId = 1;
    let nextAtendimentoId = 1;

    // Util
    function formatCurrency(valor) {
      const n = Number(valor) || 0;
      return n.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });
    }

    function getPacienteById(id) {
      return pacientes.find(p => p.id === id) || null;
    }

    function getProdutoById(id) {
      return estoque.find(e => e.id === id) || null;
    }

    // --- TABS ---
    document.querySelectorAll('.tab-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        const tab = btn.dataset.tab;
        document.querySelectorAll('.tab-content').forEach(c => c.style.display = 'none');
        document.getElementById('tab-' + tab).style.display = 'block';
      });
    });

    // --- PACIENTES + ANAMNESE ---
    const formPaciente = document.getElementById('formPaciente');
    const tbodyPacientes = document.getElementById('tbodyPacientes');
    const pacientesEmpty = document.getElementById('pacientesEmpty');
    const infoPacienteSelecionado = document.getElementById('infoPacienteSelecionado');
    const kpiPacientes = document.getElementById('kpiPacientes');

    function selecionarPaciente(id) {
      pacienteSelecionadoId = id;
      const p = getPacienteById(id);
      if (p) {
        infoPacienteSelecionado.innerHTML = `Paciente selecionado: <strong>${p.nome}</strong> (ID ${p.id})`;
      } else {
        infoPacienteSelecionado.textContent = 'Nenhum paciente selecionado.';
      }
      atualizarInfoFiltroAtendimento();
    }

    function adicionarPaciente(novo) {
      pacientes.push(novo);
      formPaciente.reset();
      renderPacientes();
      renderSelectPacientes();
    }

    formPaciente.addEventListener('submit', (e) => {
      e.preventDefault();
      const nome = document.getElementById('pacienteNome').value.trim();
      if (!nome) return;

      const base = {
        id: nextPacienteId++,
        nome,
        telefone: document.getElementById('pacienteTelefone').value.trim(),
        email: document.getElementById('pacienteEmail').value.trim(),
        obs: document.getElementById('pacienteObs').value.trim(),
        queixa: document.getElementById('pacQueixa').value.trim(),
        anamneseResumo: document.getElementById('pacAnamneseResumo').value.trim(),
        fotoAnamnese: null
      };

      const fileInput = document.getElementById('pacAnamneseFoto');
      const file = fileInput.files[0];

      if (file) {
        const reader = new FileReader();
        reader.onload = (ev) => {
          base.fotoAnamnese = ev.target.result;
          adicionarPaciente(base);
        };
        reader.readAsDataURL(file);
      } else {
        adicionarPaciente(base);
      }
    });

    document.getElementById('btnLimparPaciente').addEventListener('click', () => {
      formPaciente.reset();
    });

    function renderPacientes() {
    tbodyPacientes.innerHTML = '';

    if (pacientes.length === 0) {
        pacientesEmpty.style.display = 'block';
        document.getElementById('listaPacientesWrapper').style.display = 'none';
    } else {
        pacientesEmpty.style.display = 'none';
        document.getElementById('listaPacientesWrapper').style.display = 'block';
    }

    pacientes.forEach((p, index) => {
        const temAnamnese = p.anamneseResumo || p.fotoAnamnese;
        const tr = document.createElement('tr');
        tr.innerHTML = `
            <td>${index + 1}</td>
            <td>${p.nome}</td>
            <td>${p.telefone || '-'}</td>
            <td>${p.queixa || '-'}</td>
            <td>${temAnamnese ? '<span class="pill pill-green">Registrada</span>' : '‚Äî'}</td>
            <td>
                <button class="btn btn-outline btn-small" data-acao="selecionar">Selecionar</button>
                <button class="btn btn-outline btn-small" data-acao="ver">Ver anamnese</button>
            </td>
        `;

        tr.querySelector('[data-acao="selecionar"]').addEventListener('click', () => {
            selecionarPaciente(p.id);
        });

        tr.querySelector('[data-acao="ver"]').addEventListener('click', () => {
            // Criar modal para mostrar informa√ß√µes completas
            const modal = document.createElement('div');
            modal.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0,0,0,0.8);
                display: flex;
                justify-content: center;
                align-items: center;
                z-index: 1000;
            `;
            
            const modalContent = document.createElement('div');
            modalContent.style.cssText = `
                background: var(--bg);
                border: 1px solid var(--border);
                border-radius: var(--radius);
                padding: 20px;
                max-width: 90%;
                max-height: 90%;
                overflow: auto;
                color: var(--text);
            `;
            
            let contentHTML = `
                <h3 style="margin-bottom: 15px; color: var(--primary);">Anamnese - ${p.nome}</h3>
                <div style="margin-bottom: 15px;">
                    <strong>Queixa principal:</strong><br>
                    <p style="margin: 5px 0; padding: 8px; background: rgba(15,23,42,0.7); border-radius: 6px;">${p.queixa || 'N√£o informada'}</p>
                </div>
                <div style="margin-bottom: 15px;">
                    <strong>Resumo da anamnese:</strong><br>
                    <p style="margin: 5px 0; padding: 8px; background: rgba(15,23,42,0.7); border-radius: 6px; white-space: pre-wrap;">${p.anamneseResumo || 'N√£o informado'}</p>
                </div>
            `;
            
            if (p.fotoAnamnese) {
                contentHTML += `
                    <div style="margin-bottom: 15px;">
                        <strong>Foto da Anamnese:</strong><br>
                        <img src="${p.fotoAnamnese}" 
                             alt="Foto da anamnese" 
                             style="max-width: 100%; max-height: 400px; margin-top: 10px; border-radius: 8px; border: 1px solid var(--border);">
                        <div style="margin-top: 10px;">
                            <button id="downloadFoto" class="btn btn-primary btn-small" style="margin-right: 8px;">üì• Baixar Imagem</button>
                            
                        </div>
                    </div>
                `;
            } else {
                contentHTML += `
                    <div style="margin-bottom: 15px;">
                        <strong>Foto da Anamnese:</strong><br>
                        <p style="color: var(--muted); margin: 5px 0;">Nenhuma foto cadastrada</p>
                    </div>
                `;
            }
            
            contentHTML += `<button id="fecharModal" class="btn btn-outline" style="margin-top: 10px;">Fechar</button>`;
            
            modalContent.innerHTML = contentHTML;
            modal.appendChild(modalContent);
            document.body.appendChild(modal);
            
            // Eventos dos bot√µes do modal
            modal.querySelector('#fecharModal').addEventListener('click', () => {
                document.body.removeChild(modal);
            });
            
            if (p.fotoAnamnese) {
                modal.querySelector('#downloadFoto').addEventListener('click', () => {
                    const link = document.createElement('a');
                    link.href = p.fotoAnamnese;
                    link.download = `anamnese_${p.nome.replace(/\s+/g, '_')}.png`;
                    link.click();
                });
                
                modal.querySelector('#abrirNovaAba').addEventListener('click', () => {
                    window.open(p.fotoAnamnese, '_blank');
                });
            }
            
            // Fechar modal clicando fora
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    document.body.removeChild(modal);
                }
            });
        });

        tbodyPacientes.appendChild(tr);
    });

    kpiPacientes.textContent = pacientes.length;
}

    // --- ATENDIMENTOS ---
    const formAtendimento = document.getElementById('formAtendimento');
    const tbodyAtendimentos = document.getElementById('tbodyAtendimentos');
    const atendimentosEmpty = document.getElementById('atendimentosEmpty');
    const infoFiltroAtendimento = document.getElementById('infoFiltroAtendimento');

    function renderSelectPacientes() {
      const selectAt = document.getElementById('atPacienteId');
      selectAt.innerHTML = '';

      if (pacientes.length === 0) {
        const opt = document.createElement('option');
        opt.value = '';
        opt.textContent = 'Cadastre um paciente primeiro';
        selectAt.appendChild(opt);
        selectAt.disabled = true;
        return;
      }

      selectAt.disabled = false;
      pacientes.forEach(p => {
        const opt = document.createElement('option');
        opt.value = p.id;
        opt.textContent = `#${p.id} - ${p.nome}`;
        selectAt.appendChild(opt);
      });

      if (pacienteSelecionadoId) {
        selectAt.value = pacienteSelecionadoId;
      }
    }

    function atualizarInfoFiltroAtendimento() {
      if (filtroAtendPacienteId) {
        const p = getPacienteById(filtroAtendPacienteId);
        if (p) {
          infoFiltroAtendimento.innerHTML = `Filtrando atendimentos do paciente: <strong>${p.nome}</strong> (ID ${p.id})`;
        } else {
          infoFiltroAtendimento.textContent = 'Listando todos os atendimentos.';
        }
      } else {
        infoFiltroAtendimento.textContent = 'Listando todos os atendimentos.';
      }
    }

    document.getElementById('btnFiltrarAtendPorPaciente').addEventListener('click', () => {
      if (!pacienteSelecionadoId) {
        alert('Selecione um paciente primeiro na aba Pacientes.');
        return;
      }
      filtroAtendPacienteId = pacienteSelecionadoId;
      atualizarInfoFiltroAtendimento();
      renderAtendimentos();
      renderFinanceiro();
    });

    document.getElementById('btnLimparFiltroAtendimento').addEventListener('click', () => {
      filtroAtendPacienteId = null;
      atualizarInfoFiltroAtendimento();
      renderAtendimentos();
      renderFinanceiro();
    });

    document.getElementById('btnLimparAtendimento').addEventListener('click', () => {
      formAtendimento.reset();
      preencherItensUso(); // zera os campos de uso
    });

    function preencherItensUso() {
      const container = document.getElementById('itemsUsoLista');
      container.innerHTML = '';

      if (estoque.length === 0) {
        container.innerHTML = '<div style="font-size:12px;color:var(--muted);padding:4px 0;">Nenhum produto cadastrado no estoque. Cadastre primeiro na aba Estoque.</div>';
        return;
      }

      estoque.forEach(item => {
        const row = document.createElement('div');
        row.className = 'items-uso-row';
        row.innerHTML = `
          <span>${item.nome} ‚Äî Qtd: ${item.quantidade} ${item.unidade || ''} ¬∑ Custo: ${formatCurrency(item.custoUnitario)}</span>
          <span style="font-size:11px;color:var(--muted);">Qtd usada:</span>
          <input type="number" class="items-uso-input" min="0" step="1" id="uso-item-${item.id}" value="0">
        `;
        container.appendChild(row);
      });
    }

    formAtendimento.addEventListener('submit', (e) => {
      e.preventDefault();
      if (pacientes.length === 0) {
        alert('Cadastre um paciente antes.');
        return;
      }
      if (estoque.length === 0) {
        const continuar = confirm('Voc√™ ainda n√£o tem itens no estoque. Deseja registrar o atendimento mesmo assim?');
        if (!continuar) return;
      }

      const pacienteId = Number(document.getElementById('atPacienteId').value);
      if (!pacienteId) return;

      const data = document.getElementById('atData').value || new Date().toISOString().slice(0,10);
      const procedimento = document.getElementById('atProcedimento').value.trim();
      const valorProcedimento = Number(document.getElementById('atValorProcedimento').value) || 0;
      const relato = document.getElementById('atRelato').value.trim();

      // Montar lista de itens usados
      const itensUsados = [];
      let custoProdutos = 0;
      let erroEstoque = false;

      estoque.forEach(item => {
        const input = document.getElementById(`uso-item-${item.id}`);
        if (!input) return;
        const qtdUsada = Number(input.value) || 0;
        if (qtdUsada > 0) {
          if (qtdUsada > item.quantidade) {
            alert(`Quantidade usada de "${item.nome}" (${qtdUsada}) √© maior que o dispon√≠vel em estoque (${item.quantidade}).`);
            erroEstoque = true;
            return;
          }
          const total = qtdUsada * (Number(item.custoUnitario) || 0);
          itensUsados.push({
            produtoId: item.id,
            nome: item.nome,
            quantidade: qtdUsada,
            custoUnitario: item.custoUnitario,
            total
          });
          custoProdutos += total;
        }
      });

      if (erroEstoque) return;

      // Dar baixa no estoque
      itensUsados.forEach(uso => {
        const prod = getProdutoById(uso.produtoId);
        if (prod) {
          prod.quantidade -= uso.quantidade;
          if (prod.quantidade < 0) prod.quantidade = 0;
        }
      });

      const novo = {
        id: nextAtendimentoId++,
        pacienteId,
        data,
        procedimento,
        valorProcedimento,
        relato,
        itensUsados,
        custoProdutos
      };

      atendimentos.push(novo);
      formAtendimento.reset();
      preencherItensUso();
      renderAtendimentos();
      renderEstoque();
      renderFinanceiro();
      atualizarKpiCaixa();
    });

    function renderAtendimentos() {
      tbodyAtendimentos.innerHTML = '';

      let lista = atendimentos;
      if (filtroAtendPacienteId) {
        lista = lista.filter(a => a.pacienteId === filtroAtendPacienteId);
      }

      if (lista.length === 0) {
        atendimentosEmpty.style.display = 'block';
        document.getElementById('listaAtendimentosWrapper').style.display = 'none';
      } else {
        atendimentosEmpty.style.display = 'none';
        document.getElementById('listaAtendimentosWrapper').style.display = 'block';
      }

      lista.sort((a,b) => (a.data || '').localeCompare(b.data || ''));

      lista.forEach(a => {
        const p = getPacienteById(a.pacienteId);
        const saldo = a.valorProcedimento - a.custoProdutos;
        const qtdItens = a.itensUsados.reduce((sum, i) => sum + i.quantidade, 0);

        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${a.data || '-'}</td>
          <td>${p ? p.nome : 'Paciente removido'}</td>
          <td>${a.procedimento || '-'}</td>
          <td>${qtdItens > 0 ? `${qtdItens} item(ns)` : '‚Äî'}</td>
          <td>${formatCurrency(a.custoProdutos)}</td>
          <td>${formatCurrency(a.valorProcedimento)}</td>
          <td>
            <span class="pill ${saldo >= 0 ? 'pill-green' : 'pill-red'}">
              ${formatCurrency(saldo)}
            </span>
          </td>
          <td>
            <button class="btn btn-outline btn-small" data-acao="verItens">Itens</button>
            <button class="btn btn-outline btn-small" data-acao="verRelato">Relato</button>
            <button class="btn btn-outline btn-small btn-danger" data-acao="remover">Excluir</button>
          </td>
        `;

        tr.querySelector('[data-acao="verItens"]').addEventListener('click', () => {
          if (a.itensUsados.length === 0) {
            alert('Nenhum item de estoque foi registrado neste atendimento.');
            return;
          }
          let msg = 'Itens usados neste atendimento:\n\n';
          a.itensUsados.forEach(i => {
            msg += `- ${i.nome}: ${i.quantidade} √ó ${formatCurrency(i.custoUnitario)} = ${formatCurrency(i.total)}\n`;
          });
          msg += `\nTotal em produtos: ${formatCurrency(a.custoProdutos)}`;
          alert(msg);
        });

        tr.querySelector('[data-acao="verRelato"]').addEventListener('click', () => {
          alert(a.relato || 'Nenhum relato registrado.');
        });

        tr.querySelector('[data-acao="remover"]').addEventListener('click', () => {
          if (confirm('Remover este atendimento? Isso n√£o devolve itens ao estoque automaticamente.')) {
            atendimentos = atendimentos.filter(x => x.id !== a.id);
            renderAtendimentos();
            renderFinanceiro();
            atualizarKpiCaixa();
          }
        });

        tbodyAtendimentos.appendChild(tr);
      });
    }

    // --- ESTOQUE ---
    const formEstoque = document.getElementById('formEstoque');
    const tbodyEstoque = document.getElementById('tbodyEstoque');
    const estoqueEmpty = document.getElementById('estoqueEmpty');
    const kpiItensEstoque = document.getElementById('kpiItensEstoque');

    document.getElementById('btnLimparEstoque').addEventListener('click', () => {
      formEstoque.reset();
    });

    formEstoque.addEventListener('submit', (e) => {
      e.preventDefault();
      const nome = document.getElementById('estNome').value.trim();
      if (!nome) return;

      const novo = {
        id: nextEstoqueId++,
        nome,
        categoria: document.getElementById('estCategoria').value.trim(),
        quantidade: Number(document.getElementById('estQtd').value) || 0,
        unidade: document.getElementById('estUnidade').value.trim() || 'un.',
        custoUnitario: Number(document.getElementById('estCusto').value) || 0
      };

      estoque.push(novo);
      formEstoque.reset();
      renderEstoque();
      renderFinanceiro();
      preencherItensUso();
    });

    function statusEstoque(qtd) {
      if (qtd === 0) return { label: 'Zerado', cls: 'pill-red' };
      if (qtd <= 3) return { label: 'Baixo', cls: 'pill-yellow' };
      return { label: 'OK', cls: 'pill-green' };
    }

    function renderEstoque() {
      tbodyEstoque.innerHTML = '';

      if (estoque.length === 0) {
        estoqueEmpty.style.display = 'block';
        document.getElementById('listaEstoqueWrapper').style.display = 'none';
      } else {
        estoqueEmpty.style.display = 'none';
        document.getElementById('listaEstoqueWrapper').style.display = 'block';
      }

      estoque.forEach((item, index) => {
        const st = statusEstoque(item.quantidade);
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${index + 1}</td>
          <td>${item.nome}</td>
          <td>${item.categoria || '-'}</td>
          <td>${item.quantidade}</td>
          <td>${item.unidade}</td>
          <td>${formatCurrency(item.custoUnitario)}</td>
          <td><span class="pill ${st.cls}">${st.label}</span></td>
          <td>
            <button class="btn btn-outline btn-small" data-acao="entrada">Entrada</button>
            <button class="btn btn-outline btn-small" data-acao="saida">Sa√≠da</button>
          </td>
        `;

        tr.querySelector('[data-acao="entrada"]').addEventListener('click', () => {
          const qtd = Number(prompt('Quantidade de entrada para ' + item.nome + ':', '1')) || 0;
          if (qtd > 0) {
            item.quantidade += qtd;
            renderEstoque();
            renderFinanceiro();
            preencherItensUso();
          }
        });

        tr.querySelector('[data-acao="saida"]').addEventListener('click', () => {
          const qtd = Number(prompt('Quantidade de sa√≠da manual para ' + item.nome + ':', '1')) || 0;
          if (qtd > 0 && qtd <= item.quantidade) {
            item.quantidade -= qtd;
            renderEstoque();
            renderFinanceiro();
            preencherItensUso();
          } else if (qtd > item.quantidade) {
            alert('Quantidade solicitada maior que o dispon√≠vel em estoque.');
          }
        });

        tbodyEstoque.appendChild(tr);
      });

      kpiItensEstoque.textContent = estoque.length;
    }

    // --- FINANCEIRO ---
    const finTotalProdutos = document.getElementById('finTotalProdutos');
    const finTotalProcedimentos = document.getElementById('finTotalProcedimentos');
    const finCaixa = document.getElementById('finCaixa');
    const finCaixaTag = document.getElementById('finCaixaTag');
    const finValorEstoque = document.getElementById('finValorEstoque');
    const tbodyFinanceiro = document.getElementById('tbodyFinanceiro');
    const financeiroEmpty = document.getElementById('financeiroEmpty');
    const kpiCaixa = document.getElementById('kpiCaixa');
    const kpiCaixaTag = document.getElementById('kpiCaixaTag');

    function calcularTotaisFinanceiros() {
      let totalProdutos = 0;
      let totalProced = 0;

      atendimentos.forEach(a => {
        totalProdutos += Number(a.custoProdutos) || 0;
        totalProced += Number(a.valorProcedimento) || 0;
      });

      return {
        totalProdutos,
        totalProced,
        caixa: totalProced - totalProdutos
      };
    }

    function calcularValorEstoque() {
      let total = 0;
      estoque.forEach(item => {
        const qtd = Number(item.quantidade) || 0;
        const custo = Number(item.custoUnitario) || 0;
        total += qtd * custo;
      });
      return total;
    }

    function renderFinanceiro() {
      tbodyFinanceiro.innerHTML = '';

      if (atendimentos.length === 0) {
        financeiroEmpty.style.display = 'block';
      } else {
        financeiroEmpty.style.display = 'none';
      }

      const lista = [...atendimentos];
      lista.sort((a,b) => (a.data || '').localeCompare(b.data || ''));

      lista.forEach(a => {
        const p = getPacienteById(a.pacienteId);
        const saldo = a.valorProcedimento - a.custoProdutos;

        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${a.data || '-'}</td>
          <td>${p ? p.nome : 'Paciente removido'}</td>
          <td>${a.procedimento || '-'}</td>
          <td>${formatCurrency(a.custoProdutos)}</td>
          <td>${formatCurrency(a.valorProcedimento)}</td>
          <td>
            <span class="pill ${saldo >= 0 ? 'pill-green' : 'pill-red'}">
              ${formatCurrency(saldo)}
            </span>
          </td>
        `;
        tbodyFinanceiro.appendChild(tr);
      });

      const { totalProdutos, totalProced, caixa } = calcularTotaisFinanceiros();
      const valorEstoque = calcularValorEstoque();

      finTotalProdutos.textContent = formatCurrency(totalProdutos);
      finTotalProcedimentos.textContent = formatCurrency(totalProced);
      finCaixa.textContent = formatCurrency(caixa);
      finValorEstoque.textContent = formatCurrency(valorEstoque);

      if (caixa > 0) {
        finCaixaTag.textContent = 'Cl√≠nica com saldo positivo.';
        finCaixaTag.classList.add('positivo');
        finCaixaTag.classList.remove('negativo');
      } else if (caixa < 0) {
        finCaixaTag.textContent = 'Aten√ß√£o: custos maiores que receitas.';
        finCaixaTag.classList.add('negativo');
        finCaixaTag.classList.remove('positivo');
      } else {
        finCaixaTag.textContent = 'Sem lan√ßamentos ou saldo zerado.';
        finCaixaTag.classList.remove('positivo','negativo');
      }

      atualizarKpiCaixa();
    }

    function atualizarKpiCaixa() {
      const { caixa } = calcularTotaisFinanceiros();
      kpiCaixa.textContent = formatCurrency(caixa);
      if (caixa > 0) {
        kpiCaixaTag.textContent = 'Saldo positivo';
        kpiCaixaTag.classList.add('positivo');
        kpiCaixaTag.classList.remove('negativo');
      } else if (caixa < 0) {
        kpiCaixaTag.textContent = 'Saldo negativo';
        kpiCaixaTag.classList.add('negativo');
        kpiCaixaTag.classList.remove('positivo');
      } else {
        kpiCaixaTag.textContent = 'Aguardando atendimentos';
        kpiCaixaTag.classList.remove('positivo','negativo');
      }
    }

